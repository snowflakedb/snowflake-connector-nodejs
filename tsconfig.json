    "module": "node16",
    "target": "ES2022",
    "lib": ["ES2022"],
    "outDir": "./dist",
    "sourceMap": true,
    "allowJs": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "paths": {
      "bn.js": ["./lib/types/bn.js.d.ts"],
      "asn1.js-rfc5280": ["./lib/types/asn1.js-rfc5280.d.ts"]
    }
  },
  "include": ["index.js", "lib/**/*", "test/**/*"]
}
