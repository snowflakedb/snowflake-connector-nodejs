{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2022",
    "lib": ["ES2022"],
    "outDir": "./dist",
    "sourceMap": true,
    "allowJs": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    // NOTE: Ideally, we want strict mode, but it will cause too much @ts-ignore in the codebase
    // "strict": true
  },
  "include": ["index.js", "lib/**/*"],
}
