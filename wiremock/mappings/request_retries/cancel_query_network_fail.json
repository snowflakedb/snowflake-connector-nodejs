{
  "mappings": [
    {
      "request": {
        "urlPathPattern": "/queries/v1/query-request*",
        "method": "POST"
      },
      "response": {
        "fixedDelayMilliseconds": 30000
      }
    },
    {
      "priority": 1,
      "request": {
        "urlPathPattern": "/queries/v1/abort-request*",
        "method": "POST",
        "queryParameters": {
          "retryCount": {
            "equalTo": "3"
          }
        }
      },
      "response": {
        "status": 200,
        "headers": {
          "Content-Type": "application/json"
        },
        "jsonBody": {
          "code": null,
          "data": null,
          "message": null,
          "success": true
        }
      }
    },
    {
      "request": {
        "urlPathPattern": "/queries/v1/abort-request*",
        "method": "POST"
      },
      "response": {
        "fault": "{{responseFault}}"
      }
    }
  ]
}
